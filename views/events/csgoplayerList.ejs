<% layout('./layouts/boilerplate.ejs') %>

<% for(let player of playersList) { %> 
    <div class="card my-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Name: <%= player.name %> </h5>
          <h5 class="card-title">IGN: <%= player.ign %> </h5>
          <h5 class="card-title">Main Weapon: <%= player.mainWeapon %> </h5>
          <h5 class="card-title">Secondary Weapon: <%= player.secondaryWeapon %> </h5>
          <h5 class="card-title">Current Rank: <%= player.currentRank %> </h5>
          <h5 class="card-title">Best Rank: <%= player.bestRank %> </h5>

          <a href="/csgo/player/<%= player._id %>/<%= oid %>" class="card-link">Add PLayer</a>
        </div>

      </div>
<% } %> 