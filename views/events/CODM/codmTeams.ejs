<% layout('./layouts/boilerplate.ejs') %>

<% if(codmowner.length === 0) { %>
    <h1 class="display-6">No teams to display</h1>
<% } else { %> 
<% for(let o of codmowner) { %> 
<div class="card my-3" style="width: 18rem;">
    <img src="<%= o.teamLogo.url%>" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title">Name: <%= o.name %> </h5>
      <h5 class="card-title">IGN: <%= o.ign %></h5>
      <h5 class="card-title">Team Name: <%= o.teamName %></h5>
    </div>
    <a href = "/team/view/codm/<%= o._id %>" class = "btn btn-primary">View</a>
  </div>
<% } %> 
<% } %> 